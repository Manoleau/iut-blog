{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/show_article.css') }}">
{% endblock %}

{% block body %}
<div class="article-container top">
    <h1>{{ article.titre }}</h1>
    <p>{{ article.description }}</p>
    <p>Par <span class="author-name">{{ article.pseudo }}</span>, dernière mise à jour il y a <time class="last-updated">{{ article.updatedAt|time_ago  }}</time></p>
</div>
    <div class="add-comment-container">
        <h3>Ajouter un commentaire</h3>
        {{ include('article/_formAddComm.html.twig') }}
    </div>
    <div class="comments-container">
        <h2>Commentaires</h2>
        {% for commentaire in commentaires %}
        <div class="comment">
            <p class="comment-author">{{ commentaire.pseudo }}</p>
            <p class="comment-date">Il y a {{ commentaire.createdAt|time_ago }}</p>
            <p class="comment-content">{{ commentaire.description }}</p>
        </div>
        {% else %}
            <p>Pas de commentaire</p>
        {% endfor %}

    </div>

    {# {{ include('article/_delete_form.html.twig') }} #}
{% endblock %}
