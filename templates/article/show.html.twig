{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ article.pseudo }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Commentaires</h2>
    <div class="commentaires_container"><ul>
            {% for commentaire in commentaires %}
                <li>{{ commentaire.pseudo }} a dit {{ commentaire.description }}</li>
            {% else %}
                <li>pas de commentaire</li>
            {% endfor %}
        </ul>
        <h3>Ajouter un commentaire</h3>
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Ajouter un commentaire') }}</button>
    </div>
    <button class="btn"><a href="{{ path('app_article_index') }}">back to list</a></button>

    <button class="btn"><a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a></button>


    {# {{ include('article/_delete_form.html.twig') }} #}
{% endblock %}
